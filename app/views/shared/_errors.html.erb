<% if obj.errors.any? %>
  <div class="ui error message transition">
    <i class="close icon"></i>
      <div class="header">
        <%= pluralize(obj.errors.count, "error") %>
          prohibited this artcle from being saved:
      </div>
      <div class="ui list">
        <% obj.errors.full_messages.each do |msg| %>
          <div class="item">
            <%= msg %>
          </div>
        <% end %>
      </div>
  </div>
<% end %>
