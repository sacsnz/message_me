<h4 class="ui center aligned large icon header">
  <i class="circular red paper plane outline icon"></i>
  Say Something
</h4>


<div class="ui two column stackable grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <h4 align="center" class="ui header block">Chatroom</h4>
       <div class="extra content">
          <%= form_for(@message, html: {class: "ui reply form"}, url: message_path, remote: true) do |f| %>
            <div class="field">
              <div class="ui fluid icon input focus">
                <%= f.text_field :body, placeholder: "Enter a message..." %>
                <%= f.button '<i class="bordered inverted red edit icon"></i>'.html_safe %>
              </div>
            </div>
          <% end %>       
        </div>
      <div class="content" id="messages">
        <div class="ui feed" id="message-container">
          
            <%= render @messages %>
        </div>
      </div>
       
      </div>
    
  </div>
  <div class="four wide column">
      <div class="ui fluid raised card chatbox">
       
            

          </div>
        </div>
      </div>
    </div>
  </div>
